{
  "compilerOptions": {
    "jsx": "react-jsx", // Or "react" for older React versions
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "es6",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
